<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head')  %> 
</head>
<body style="background: #f1c036;">

  <%- include('./partials/navbar') %>


    <div class="container mt-5">
      <form action="/<%= note._id %>?_method=PATCH" method="post"  >
        <div class="mb-3">
          <label for="title" class="form-label">Title:</label>
          <input type="text" class="form-control" id="title" name="title" value="<%=note.title%>" style="background: #f0f07c;">
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Body:</label>
          <textarea class="form-control" id="description" name="description" rows="5" style="background: #f0f07c;"><%=note.description%></textarea>
        </div>
        <button type="submit" class="btn btn-dark">Update</button>
        <a href="<%= process.env.ADDRESS%>/" class="btn btn-secondary"">Back</a>
      </form>
        </div>
    

    <%- include('./partials/scripts') %> 
</body>
</html>