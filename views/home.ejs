<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head')  %> 
</head>
<body >
    
    <%- include('./partials/navbar') %>

    <div class="container mt-3">
        <h1>
            Your Notes: 
        </h1>
            
            <div class="d-flex align-content-center flex-wrap">
                <% allNotes.forEach((element, index)=> { %>
                    <div class="card text-bg-dark m-3" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= element.title %>
                            </h5>
                            <p class="card-text">
                                <%= element.description %>
                            </p>
                            <a href="http://localhost:<%= process.env.PORT %>/<%= element._id %>  " class="card-link">Card link</a>
                        </div>
                    </div>
                    <% }) %>
            </div>
            </div>
            


    <%- include('./partials/scripts') %> 
</body>
</html>