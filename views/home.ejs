<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head')  %> 
</head>
<body style="background: #f1c036;">
    
    <%- include('./partials/navbar') %>

    <div class="container mt-3">
    
        <a href="/new" class="btn btn-dark m-3">Create new Note!!</a>
        <hr>
            
            <div class="d-flex align-content-center flex-wrap">
                <% allNotes.forEach((element, index)=> { %>
                    <div class="card text-bg-dark m-3 p-3  " style="width: 18rem;">
                        <h5 class="card-title p-3">
                            <%= element.title %>
                        </h5>
                        <div class="card-body" style="height: 6rem; overflow-y: auto" >
                            <p class="card-text">
                                <%= element.description %>
                            </p>
                        </div>
                        <div class="btn-group">
                            <a href="/<%= element._id %>  " class="btn btn-warning mt-1">Edit 
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen" viewBox="0 0 16 16">
                                    <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001m-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44 3.854a.5.5 0 0 0 0-.708z"/>
                                </svg>
                            </a>
                            <button class="btn btn-outline-warning btn-sm mt-1" onclick="deleteNote('/api/notes/<%= element._id %>')">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                                    <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                                  </svg>
                            </button>
                        </div>
                    </div>
                    
                    <% }) %>
            </div>
            <hr>
            </div>
            

            <!-- <%= JSON.stringify(allNotes);%> -->
            


    <%- include('./partials/scripts') %> 
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.2.1/axios.min.js"></script>
    <script>
        async function deleteNote ( address ){
            await axios.delete(address)
                .then( res=> console.log(res))
                .catch(err=> console.log(err));
            
                window.location.replace("<%= process.env.ADDRESS%>/");
        }
    </script>
</body>
</html>